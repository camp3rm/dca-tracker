{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
			"@/*": ["./src/*"],
			"@app/*": ["./src/app/*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@styles/*": ["./src/styles/*"],
			"@lib/*": ["./src/lib/*"],
			"@store/*": ["./src/store/*"],
			"@types/*": ["./src/types/*"],
			"@mocks/*": ["./src/mocks/*"],
			"@utils/*": ["./src/utils/*"],
			"@services/*": ["./src/services/*"],
			"@constants/*": ["./src/constants/*"]
		}
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"],
  
}
